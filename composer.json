{
  "name": "talentplatforms/wordpress",
  "description": "install wordpress via composer",
  "authors": [
    {
      "name": "Andy Ruck",
      "email": "ruck.andreas@territory.de"
    },
    {
      "name": "Max Bause",
      "email": "bause.max@territory.de"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "talentplatforms/tpde-blog",
        "version": "1.3",
        "type": "wordpress-theme",
        "source": {
          "url": "https://gitlab.com/talentplatforms/blogs/tpde-blog-theme",
          "type": "git",
          "reference": "develop"
        }
      }
    }
  ],
  "config": {
    "dropin-installer": "copy",
    "preferred-install": "dist",
    "gitlab-token": {
        "gitlab.com": "JRjUmdGwnmGycVpzb3EB"
    }
  },
  "require": {
    "wpackagist-plugin/advanced-custom-fields": "~5.7.9",
    "wpackagist-plugin/bj-lazy-load": "~1",
    "wpackagist-plugin/category-posts": "~4.8.5",
    "wpackagist-plugin/clean-image-filenames": "~1.2.1",
    "wpackagist-plugin/wordpress-seo": "~10.0",
    "wpackagist-plugin/wp-asset-clean-up": "~1.3.2.5",
    "wpackagist-plugin/wp-fastest-cache": "~0.8.8",
    "wpackagist-plugin/co-authors-plus": "~3.3.1",
    "talentplatforms/tpde-blog": "*"
  },

  "extra": {
    "wordpress-install-dir": "/app/wp",
    "installer-paths": {
      "wp/wp-content/mu-plugins/{$name}": [
        "type:wordpress-muplugin",
        "andtherand/svs-security",
        "wpackagist-plugin/wp-permalauts"
      ],

      "wp/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wp/wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  }
}
